extends ../layouts/common

block main
  h2 Login
  if errors
    each error in errors
        .alert.alert-danger= error
  form(method="POST")
    input(type="hidden", value= csrfToken, name="_csrf")
    div(class="form-group")
      input(class="form-control", type="text", name="email", placeholder="Email", value= values ? values.email : '')
    div(class="form-group")
      input(class="form-control", type="password", name="password", placeholder="Password", value= values ? values.password : '')
    button(class="btn btn-primary") Login